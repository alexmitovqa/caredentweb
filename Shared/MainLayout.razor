@using MudBlazor
@using MudBlazor.ThemeManager

@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<PageTitle>CareDentWeb</PageTitle>

<MudThemeProvider Theme="MyCustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Style="height: 50px">
        <MudItem Class="d-flex">
            <MudImage Class="mr-2" Width="40" Height="40" Src="img/CareDent.png" Alt="CareDent Logo"></MudImage><MudText Style="color: #e23d74;" Typo="Typo.h4">CareDent</MudText>
        </MudItem>
        <MudGrid Class="appbar-contact-info" Justify="Justify.FlexEnd">
            <MudItem Class="appbar-phone" Style="margin-top: 5px">
                <MudIcon Icon="@Icons.Material.Filled.Phone" Class="mr-2" Style="font-size: 20px; margin-top: 2px"></MudIcon><MudText Style="font-size: 16px">+359 884 512 650</MudText>
            </MudItem>
            <MudItem Class="appbar-address" Style="margin-top: 5px">
                <MudIcon Icon="@Icons.Material.Filled.LocationOn" Class="mr-2" Style="font-size: 20px; margin-top: 2px"></MudIcon><MudText Style="font-size: 16px">ж.к.Дружба 1, ул. "Канала", бл.194, София</MudText>
            </MudItem>
            <MudItem Class="appbar-appointment-button">
                <MudButton Href="tel:+359884512650" Variant="Variant.Filled" Style="border-radius: 10px; font-size: 13px; background-color: #6d2750">Обади се</MudButton>
            </MudItem>
        </MudGrid>
    </MudAppBar>
    <MudAppBar Style="background-color: rgba(56, 38, 47, 1); top: 50px">
        <MudGrid Justify="Justify.FlexEnd">
            <MudItem Class="d-flex">
                <MudNavLink Class="appbar-navlink" Style="font-size: 16px" OnClick="@(async () => await ScrollToElementAsync("home"))">Начало</MudNavLink>
                <MudNavLink Class="appbar-navlink" Style="font-size: 16px" OnClick="@(async () => await ScrollToElementAsync("aboutus"))">За Нас</MudNavLink>
                <MudNavLink Class="appbar-navlink" Style="font-size: 16px" OnClick="@(async () => await ScrollToElementAsync("services"))">Услуги</MudNavLink>
                <MudNavLink Class="appbar-navlink" Style="font-size: 16px;">Случаи</MudNavLink>
                <MudNavLink Class="appbar-navlink" Style="font-size: 16px" OnClick="@(async () => await ScrollToElementAsync("contacts"))">Контакти</MudNavLink>
            </MudItem>
        </MudGrid>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    MudTheme MyCustomTheme = new MudTheme()
        {
            Palette = new PaletteDark()
            {
                Background = "#1a2026",
                AppbarText = "#ffffffe3",
                TextPrimary = "#fffffff0"
            },
            LayoutProperties = new LayoutProperties()
            {
                AppbarHeight = "50px"
            },
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new string[] { "Nunito Sans", "Roboto", "Helvetica", "Arial", "sans-serif" }
                },
                Body1 = new Body1()
                {
                    FontFamily = new string[] { "Nunito Sans", "Roboto", "Helvetica", "Arial", "sans-serif" }
                },
                Overline = new Overline()
                {
                    FontFamily = new string[] { "Nunito Sans", "Roboto", "Helvetica", "Arial", "sans-serif" }
                }
            }
        };

    private async Task ScrollToElementAsync(string elementId)
    {
        await JSRuntime.InvokeVoidAsync("scrollToElement", elementId);
    }
}
